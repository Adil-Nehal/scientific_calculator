<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#7D1919" />
            <gradient android:angle="0" android:endColor="#891C1C" android:startColor="#961C1C" /> <!-- Gradient from light to dark -->
            <corners android:radius="12dp" /> <!-- Radius to create rounded corners -->
        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#7D1919" />

            <gradient android:angle="90" android:endColor="#891C1C" android:startColor="#961C1C" /> <!-- Gradient from light to dark -->
            <corners android:radius="12dp" /> <!-- Radius to create rounded corners -->
        </shape>
    </item>

</selector>