<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#BDBDBD" />
            <gradient android:angle="0" android:endColor="#AFAFAF" android:startColor="#D4D4D4" /> <!-- Gradient from light to dark -->
            <corners android:radius="12dp" /> <!-- Radius to create rounded corners -->
        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#BDBDBD" />

            <gradient android:angle="90" android:endColor="#BDBDBD" android:startColor="#E0E0E0" /> <!-- Gradient from light to dark -->
            <corners android:radius="12dp" /> <!-- Radius to create rounded corners -->
        </shape>
    </item>

</selector>